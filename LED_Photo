*****Allumage des LED et prise de photo via le smartphone*****
*****Communication via Arduino pour la commande*****

int Led1, Led2, Led3, Led4, Led5, Led6, Led7, Led8; // Déclaration des huit LED 
void setup() //Initialisation de l'arduino

{
  // On associe chacune des leds à une sortie
  Led1=1
  Led2=2
  Led3=3
  Led4=4
  Led5=5
  Led6=6
  Led7=7
  Led8=8
  
  //On définit chaque LED comme une sortie
  pinMode(Led1, OUTPUT);
  pinMode(Led2, OUTPUT);
  pinMode(Led3, OUTPUT);
  pinMode(Led4, OUTPUT);
  pinMode(Led5, OUTPUT);
  pinMode(Led6, OUTPUT);
  pinMode(Led7, OUTPUT);
  pinMode(Led8, OUTPUT);
  
  //On éteint toutes les LEDs.
  digitalWrite(Led1, LOW);
  digitalWrite(Led2, LOW);
  digitalWrite(Led3, LOW);
  digitalWrite(Led4, LOW);
  digitalWrite(Led5, LOW);
  digitalWrite(Led6, LOW);
  digitalWrite(Led7, LOW);
  digitalWrite(Led8, LOW);

  //Une fois le système initialisé, on peut lancer l'acquisition, la chose se faisant en deux tps, 
  //l'allumage d'une LED et une prise de photo.

   digitalWrite(Led1, HIGH);
   delay(1000) // On laisse une délai de 1 s pour l'éclairage
   
   
   ********Partie Photo
   
   digitalWrite(Led1, LOW); // Ba oui faut bien éteindre pour passer sur une suivante
   digitalWrite(Led2, HIGH);// Pour le coup on enchaine directement
   .
   .
}


  
